#list
  reset-list()
  margin-left: 25px

  li
    margin-top: 30px
    position: relative

    &:before
      content: ""
      triangle: right 8px #1D1D2E
      absolute: left -25px top 10px
      transition()

    &:hover
      &:before
        left: -20px

    a
      text-decoration: none

  h4
    color: #9F98CB
    margin: 0 0 .2em 0
    font-family: sommet-rounded
    font-size: 1em

  p
    margin: 0
    color: #DFDDEE
