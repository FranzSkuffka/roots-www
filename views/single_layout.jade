    nav
      .logo
        h1 Roots
        h2 enlightened static sites

      .links
        a(href='#') documentation
        a(href='#') tutorials
        a(href='#') extensions

      img.light-rays(src='/img/index/light-rays.svg')

      .trees
        img.trees1(src='/img/single/trees1.svg')
        img.trees2(src='/img/single/trees2.svg')
        img.trees3(src='/img/single/trees3.svg')

    main
      block content

  script(src='/js/build.js')
